{
    "compilerOptions": {
        "outDir": "./dist/esm",
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": [ "es2015", "dom" ],
        "target": "es5",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}