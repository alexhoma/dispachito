{
    "compilerOptions": {
        "outDir": ".",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": [ "es6", "dom" ],
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "sourceRoot": "./src/index.ts",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}